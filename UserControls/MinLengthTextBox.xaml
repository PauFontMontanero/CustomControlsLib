<UserControl x:Class="CustomControlsLib.MinLengthTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border x:Name="border" 
            BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=UserControl}}" 
            BorderThickness="1">
        <TextBox x:Name="textBox"
                 Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}"
                 Background="White"
                 ToolTip="{Binding ValidationMessage, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Border>
</UserControl>